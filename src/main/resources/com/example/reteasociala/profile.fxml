<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.reteasociala.ProfileController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #800080;"> <!-- Fundal mov -->

    <!-- Container central pentru a centra conținutul -->
    <VBox alignment="CENTER" spacing="20.0" layoutX="150.0" layoutY="50.0">
        <!-- Imaginea de profil -->
        <ImageView fx:id="imagineProfil" fitHeight="120.0" fitWidth="120.0"
                   style="-fx-background-radius: 60; -fx-clip: rect(0, 0, 120, 120);">
        </ImageView>

        <!-- Numele utilizatorului -->
        <Label fx:id="labelNume" text="Nume Utilizator"
               style="-fx-text-fill: #FFD700; -fx-font-size: 18px; -fx-font-weight: bold;" /> <!-- Text galben auriu -->

        <!-- Numărul de prieteni -->
        <Label fx:id="labelNumarPrieteni" text="Număr prieteni: 0"
               style="-fx-text-fill: #FFD700; -fx-font-size: 14px;" /> <!-- Text galben auriu -->
    </VBox>
</AnchorPane>